<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_loading_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/success_toast_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/dialog_loading_animation"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/defind_loading" />

        <TextView
            android:id="@+id/dialog_loading_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="left"
            android:text=""
            android:textColor="@color/ColorWhite"
            android:textSize="14sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/dialog_loading_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="加载中"
        android:textColor="@color/ColorWhite"
        android:textSize="14sp" />

</LinearLayout>